    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) 接続",
            "type": "cppdbg",
            "request": "attach",
            "program": "プログラム名を入力してください (例: ${workspaceFolder}/a.out)",
            "processId": "${command:pickProcess}",
            "MIMode": "lldb"
        },
    
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/<your program>",
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}